<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/main_bg"
    tools:context="com.bob.mobilesafe.activities.HomeActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="手机卫士"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/textColorPrimary"
        android:background="@mipmap/main_title_bg"/>
    <LinearLayout
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/scan_bg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/main_status_baohu"
                android:layout_margin="30dp"/>
            <ImageView
                android:id="@+id/main_iv_scan"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/check_sweep"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="90dp"
                android:visibility="invisible"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="建议体检看看"
                android:textColor="@color/textColorPrimary"
                android:textSize="20dp"
                />
            <Button
                android:id="@+id/scan_btn"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/main_function_button_normal"
                android:text="一键体检"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/check"
        android:layout_marginTop="45dp"
        android:background="@drawable/traffic_tanchu"
        >

        <ListView
            android:id="@+id/list_scan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/main_divider_small"
            android:background="@drawable/traffic_tanchu">
        </ListView>
            <ScrollView
                android:id="@+id/sv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/imageview2"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:background="@drawable/traffic_tanchu"
                    >
                </LinearLayout>
            </ScrollView>
    </FrameLayout>


    <SlidingDrawer
        android:id="@+id/slidingdrawer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:handle="@+id/handle"
        android:content="@+id/content"
        android:layout_below="@+id/title">
        <ImageButton
            android:id="@+id/handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/main_bottom_slidingdrawer_bg"
            />
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/traffic_tanchu">
            <GridView
                android:id="@+id/gv"
                android:listSelector="@color/touming"
                android:layout_width="wrap_content"
                android:layout_height="500dp"
                android:verticalSpacing="8dip"
                android:horizontalSpacing="8dip"
                android:layout_marginLeft="25dp"
                android:numColumns="3"
                android:layout_marginTop="35dp">
            </GridView>

        </LinearLayout>

    </SlidingDrawer>

</RelativeLayout>
