<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/textview_title_style"
        android:text="设置安全号码"/>
    <TextView
        style="@style/textview_content_style"
        android:text="SIM卡发生变化，发送报警短信给号码"/>
    <EditText
        android:id="@+id/et_satup_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入安全号码"/>
    <Button
        android:id="@+id/select_concat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择安全号码"
        android:background="@drawable/button_selector"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/phone"/>
        <Button
            android:id="@+id/next"
            android:drawableRight="@mipmap/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:background="@drawable/button_selector"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <Button
            android:id="@+id/previous"
            android:drawableLeft="@mipmap/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一步"
            android:background="@drawable/button_selector"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</LinearLayout>